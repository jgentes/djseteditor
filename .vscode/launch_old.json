{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
      "program": "${workspaceFolder}/server.js"
    },
    {
      "name": "Client",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/webpack-dev-server",
      "args": [
        "--config",
        "${workspaceFolder}/build/webpack.config.client.dev.js"
      ],
      "autoAttachChildProcesses": true
    }
  ],
  "compounds": [
    {
      "name": "Client & Server",
      "configurations": [
        "Server",
        "Client"
      ]
    }
  ]
}