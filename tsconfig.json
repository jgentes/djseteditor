{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "preserveConstEnums": true,
    "moduleResolution": "Node"
  },
  "strict": false,
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
