{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "preserveConstEnums": true,
    "paths": {
      "test-setup": ["./test-setup"]
    }
  },
  "moduleResolution": "node",
  "strict": false,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
